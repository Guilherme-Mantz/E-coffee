<%- include('./partials/header') %> 
<main>
    <div class="title-suaconta">
        <h1>Seus Endereços</h1>
    </div>    
    <div class="enderecos-user">
        <% if(enderecos.length == 3) { %>
            <% }else{ %> 
                <div class="criarEndereco">
                    <a href="/paginadousuario/<%= sessao.user.id_cliente %>/enderecos/novoendereco">
                        <img src="/images/plus.png" alt="crirar" style="margin-top: 57px;">
                        <p>Adicionar Novo Endereço</p>
                    </a>
                </div>
            <% } %> 
        <% for(let i = 0; i < enderecos.length; i++) { %>
            <div class="lista-enderecos">
                <div class="endereco" <% if(enderecos.length >= 3) { %> style="padding-bottom: 1em;" <% } %>>
                    <h2><%= enderecos[i].nome_do_endereco %> </h2>
                    <ul>
                        <li><%= enderecos[i].logradouro %>,Nº <%= enderecos[i].num_residencia %></li>
                        <li><%= enderecos[i].bairro %></li>
                        <li><%= enderecos[i].cidade %>, <%= enderecos[i].uf %>, <%= enderecos.cep %></li>
                        <li>Complemento: <%= enderecos[i].complemento %></li>
                    </ul>
                    <div class="editar">
                        <div class="alterar">
                            <a href="/paginadousuario/<%= sessao.user.id_cliente %>/enderecos/editar/<%= enderecos[i].id_cli_enderecos %>">Alterar</a>
                        </div>                        
                        <div class="excluir">
                            <a href="/paginadousuario/<%= sessao.user.id_cliente %>/enderecos/excluir/<%= enderecos[i].id_cli_enderecos %>">Excluir</a>
                        </div>
                    </div>                 
                </div>
            </div>
        <% } %>                  
    </div>
    <div class="voltar">
        <a href="/paginadousuario/<%= sessao.user.id_cliente %>">Voltar</a>
    </div>
    <div class="whatsapp">
        <a href="#"><img src="images/icons8-whatsapp-48.png"></a>
    </div>
</main>
<%- include('./partials/footer') %>