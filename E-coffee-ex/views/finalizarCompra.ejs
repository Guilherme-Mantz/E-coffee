<%- include('./partials/header'); %>

    <main>
        <div class="res-pedido">
            <h1>Resumo do pedido</h1>
        </div>
        <div class="informacoes-produto">
            <img src="./images/Mondial-C-08 6.png" alt="Cafeteira">
            <ul>
                <li>Cafeteira Mondial Espresso C-08 automática expresso 110V preta</li>
                <li style="width: 230px;margin-top: 15px;">Entrega e vendido por: E-coffee</li>
                <li style="width: 160px;margin-top: 15px;">Normal até 2 dais úteis</li>
            </ul>
        </div>
        <div class="info-valores">
            <div class="info-resumo">
                <p>Produto</p>
                <p>Frete</p>
                <p>Total</p>
            </div>
            <div class="info-valor">
                <p>R$ xx,xx</p>
                <p>R$ xx,xx</p>
                <p>R$ xx,xx</p>
            </div>
        </div>
        <div class="finaliza-compra">
            <button>Finalizar compra</button>
        </div>
        <div class="cfg-pedido">
            <h4>Selecione e Confira seu endereço</h4>
            <h4>Selecione uma forma de pagamento</h4>
        </div>
        <div class="pedido-pagamento">
            <div class="meio-de-entrega">
                <div class="title-meios">
                    <img src="./images/icons8-casinha-de-cachorro-50 1 (1).png" alt="Endereço de entrega" height="38">
                    <p style="margin-left: 9px;margin-top: 3px;">Endereço de Entrega</p>
                </div>
                <div class="Selecione-uma-forma-de-pagamento">
                    <select name="Entrega">
                        <option value="Home">Casa</option>
                        <option value="Office"> Escritório</option>
                    </select>
                    <div class="title-endereco">
                        <p>Endereço</p>
                    </div>
                    <div class="info-de-enderecos">
                        <div class="endereco">
                            <ul style="margin-left: 25px;">
                                <li>Rua fulano de tal, xx</li>
                                <li>00000-000</li>
                                <li>bairro tal tal - São Paulo - SP</li>
                            </ul>
                        </div>
                        <div class="edit-endereco">
                            <a href="#">Editar</a> |
                            <a href="#">Excluir Endereço</a>
                            <div class="adc-endereco">
                                <a href="#">Adicionar Endereço</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="selecao-endereco">
                    <h2>Selecione a Forma de Entrega</h2>
                    <div class="box-options">
                        <div class="Normal">
                            <div>
                                <input type="radio" id="normal" name="entrega" value="op1" />
                                <label for="normal">Normal</label>
                            </div>
                            <p>Até 2 dias úteis</p>
                            <p style="color: #CE5F20;">R$ xx,xx</p>
                        </div>
                        <div class="Agendada">
                            <div>
                                <input type="radio" id="agendada" name="entrega" value="op2" />
                                <label for="agendada">Agendada</label>
                            </div>
                            <p>A partir de 16 dias úteis</p>
                            <p style="color: #CE5F20;">R$ xx,xx</p>
                        </div>
                        <div class="Expressa">
                            <div>
                                <input type="radio" id="expressa" name="entrega" value="op3" />
                                <label for="expressa">Expressa</label>
                            </div>
                            <p>Até 1 dia útil</p>
                            <p style="color: #CE5F20;">R$ xx,xx</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="formas-pagamento">
                <div class="opcoes-pagamento">
                    <div class="pagamento-escolhido">
                        <label for="cartao">Cartão de Crédito</label>
                        <input type="radio" id="cartao" name="cartao">
                    </div>
                    <select name="Pagamento">
                        <option value="Preço à vista">Preço à vista</option>
                        <option value="Em 2x de R$xx,xx sem juros">Em 2x de R$xx,xx sem juros</option>
                        <option value="Em 3x de R$xx,xx sem juros">Em 3x de R$xx,xx sem juros</option>
                        <option value="Em 4x de R$xx,xx sem juros">Em 4x de R$xx,xx sem juros</option>
                        <option value="Em 5x de R$xx,xx sem juros">Em 5x de R$xx,xx sem juros</option>
                        <option value="Em 6x de R$xx,xx sem juros">Em 6x de R$xx,xx sem juros</option>
                        <option value="Em 7x de R$xx,xx sem juros">Em 7x de R$xx,xx sem juros</option>
                        <option value="Em 8x de R$xx,xx sem juros">Em 8x de R$xx,xx sem juros</option>
                        <option value="Em 9x de R$xx,xx sem juros">Em 9x de R$xx,xx sem juros</option>
                        <option value="Em 10x de R$xx,xx sem juros">Em 10x de R$xx,xx sem juros</option>
                    </select>
                </div>
                <div class="box-pagamentos">
                    <div class="debito">
                        <div>
                            <img src="./images/icons8-parte-traseira-de-cartão-de-banco-48 1.png" alt="Cartão">
                            <input type="radio" id="debito" name="pagamento">
                            <label for="debito" style="padding-left: 136px;">Cartão de Débito</label>
                        </div>
                    </div>
                    <div class="boleto">
                        <div>
                            <img src="./images/icon-boleto.png" alt="Boleto">
                            <input type="radio" id="boleto" name="pagamento">
                            <label for="boleto" style="padding-left: 197px;">Boleto</label>
                        </div>
                    </div>
                    <div class="pix">
                        <div>
                            <img src="./images/icons8-pagamento-móvel-40 2.png" alt="Pix">
                            <input type="radio" id="pix" name="pagamento">
                            <label for="pix" style="padding-left: 245px;">Pix</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('./partials/footer') %>