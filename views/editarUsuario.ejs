<%- include('./partials/header') %> 
<main>
    <div class="editar-perfil">
        <div class="editar">
            <form method="POST" action="/paginadousuario/seguranca/editar?_method=PUT">
                <div class="campo">
                    <label for="name">Nome:</label>
                    <label for="lastname" style="padding-left: 14rem;">Sobrenome:</label>
                    <div class="input">
                        <input type="text" id="name" name="name" placeholder="Digite seu nome" value="<%= sessao.user.nome %>">
                        <%if(errors.name){%>
                            <span>
                                <%=errors.name.msg%>
                            </span>                     
                        <% } %>
                        <input type="text" id="lastname" name="lastname" placeholder="Digite seu sobrenome" style="margin-left: 1.7rem;" value="<%= sessao.user.sobrenome %>">
                        <%if(errors.lastname){%>
                            <span class="error-lastname">
                                <%=errors.lastname.msg%>
                            </span>                            
                        <% } %>
                    </div>            
                </div>                    
                <div class="campo">
                    <label for="telefone">Telefone:</label>
                    <div class="input">
                        <input type="tel" id="telefone" maxlength='11' name="telefone" placeholder="DDD + Número sem traços ou espaços" value="<%= sessao.user.telefone %>">
                        <%if(errors.telefone){%>
                            <%=errors.telefone.msg%>
                        <% } %>
                    </div>                        
                </div>
                <div class="campo">
                    <label for="cpf">CPF:</label>
                    <div class="input">
                        <input type="text" id="cpf" name="cpf" placeholder="Digite seu CPF" value="<%= sessao.user.cpf %>">
                        <%if(errors.cpf){%>
                            <%=errors.cpf.msg%>
                        <% } %>
                    </div>                        
                </div>
                <div class="campo">
                    <label for="email">Alterar E-mail:</label>
                    <div class="input">
                        <input type="text" id="email" name="email" value="<%= sessao.user.email %>">
                        <%if(errors.email){%>
                            <%=errors.email.msg%>
                        <% } %>
                    </div>                        
                </div>
                <div class="campo">
                    <label for="password">Alterar sua senha:</label>
                    <label for="confirmpassword" style="padding-left: 8.3rem;">Confirmar senha:</label>
                    <div class="input">
                        <input type="password" id="password" name="password">
                        <input type="password" id="confirmpassword" name="confirmpassword" style="margin-left: 1.7rem;">
                        <%if(errors.confirmpassword){%>
                            <span>
                                <%=errors.confirmpassword.msg%>
                            </span>                     
                        <% } %>
                    </div>
                </div>                    
                <div class='newllester'>
                    <p>Deseja receber promoções e novidades?</p>
                    <input type="checkbox">
                </div>
                <div class='salvar'>
                    <button type="submit">Salvar alterações</button>
                    <div class="cancel-edicao">
                        <a href="/paginadousuario/seguranca">Cancelar</a>
                    </div>                    
                </div>
            </form>
        </div>
    </div>        
</main>
<%- include('./partials/footer') %> 