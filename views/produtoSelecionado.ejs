
<%- include('./partials/header') %> 
<main style="margin-right: 250px;">
    <div class="wrapper">
            <div class="produto">
                <div class="miniaturaProduto" style="height: 0px;">
                    <div class="miniatura">
                        <img src="/<%= produto.miniaturaDois %>" alt="miniatura1" width="80px" height="80px">
                    </div>                    
                    <div class="miniatura">
                        <img src="/<%= produto.miniaturaUm %>" alt="miniatura2" width="80px" height="80px">
                    </div>   
                </div>
                <div class="imagemProduto">
                    <img src="/<%= produto.imagem %>" alt="Cafeteira" width="380px" height="380px">
                </div>
                <div class="compraProduto">
                    <form action="/carrinho/<%= produto.id_produto %>" method="POST">
                    <h2><%= produto.title_pagina %></h2>
                    <h4>Selecione a quantidade:</h4>
                    <select id="qtd" name="quantidade">
                        <% for(let i =  1; i <= 10; i++) { %> 
                            <option value="<%= [i] %> "><%= [i] %> </option>
                        <% } %> 
                    </select>
                    <h1>R$ <%= produto.preco %></h1>
                    <p>Ou em até 10x de R$<%= (produto.preco / 10).toFixed(2) %> sem juros</p>
                        <div class="comprar">
                            <button type="submit">Colocar no Carrinho</button>
                        </div>  
                    </form>           
                </div>                  
            </div>                
            <div class="whatsappIcon">
                <img src="/images/icons8-whatsapp-48.png" alt="whatsappIcon" width="60px" height="60px"> 
            </div>
        <div class="descricao-pedido">
            <div class="title-descri">
                <h4>Descrição do Produto</h4>
            </div>
            <ul id="descri-produto">
                <li id="text-product"><%= produto.descricao_produto %></li>
            </ul>
            <div class="title-informacoes">
                <h4>Informacoes Técnicas</h4>
            </div>
            <ul id="descri-produto">
                <li id="text-product"><%= produto.informacoes_tecnicas %></li>
            </ul>
        </div>
    </div>
</main>
<%- include('./partials/footer') %> 