<%- include('./partials/header') %>
<head>
    <link rel="stylesheet" href="/stylesheets/login.css">
</head>
    <div class="body-login">
        <div class="container" id="container" <% if(locals.erro) { %> style="min-height: 41rem;" <% } %>  >
            <div class="form-container sign-up-container">
                <form action="/iniciarsessao/create" method="POST" id="formCadastro">
                    <h1>Cadastre-se</h1>
                    <div class="formCadastro">
                        <input type="text" name="name" placeholder="Nome" id="nome" value="<%= old.name %>"/>
                    <% if(locals.erro && erro.name) { %>
                        <span style="color: white;">
                            <%= erro.name.msg %>
                        </span>
                    <% } %>
                    </div>
                    <div class="formCadastro">
                        <input type="text" name="lastname" placeholder="Sobrenome" id="sobrenome" value="<%= old.lastname %>" />
                    <% if(locals.erro && erro.lastname) { %>
                        <span style="color: white;">
                            <%= erro.lastname.msg %>
                        </span>
                    <% } %>
                    </div>
                    <div class="formCadastro">
                        <input type="text" name="telefone" maxlength="11" placeholder="Telefone" id="telefone" value="<%= old.telefone %>" />
                    <% if(locals.erro && erro.telefone) { %>
                        <span style="color: white;">
                            <%= erro.telefone.msg %>
                        </span>
                    <% } %> 
                    </div>
                    <div class="formCadastro">
                        <input type="text" name="cpf" maxlength="30" placeholder="CPF" id="cpf" value="<%= old.cpf %>" />
                    <% if(locals.erro && erro.cpf) { %>
                        <span style="color: white;">
                            <%= erro.cpf.msg %>
                        </span>
                    <% } %>
                    </div>
                    <div class="formCadastro">
                        <input type="email" name="email" placeholder="E-mail" id="email" value="<%= old.email %>" />
                    <% if(locals.erro && erro.email) { %>
                        <span style="color: white;">
                            <%= erro.email.msg %>
                        </span>
                    <% } %>
                    </div>
                    <div class="formCadastro">
                        <input type="password" name="password" placeholder="Senha" id="senha" />
                    <% if(locals.erro && erro.password) { %>
                        <span style="color: white;">
                            <%= erro.password.msg %>
                        </span>
                    <% } %>
                    </div>
                    <div class="formCadastro">
                        <input type="password" name="confirmpassword" placeholder="Confirme a Senha" id="confirmasenha" />
                    <% if(locals.erro && erro.confirmpassword) { %>
                        <span style="color: white;" >
                            <%= erro.confirmpassword.msg %>
                        </span>
                    <% } %>
                    </div>
                    <button style="margin-top: 17px;" type="submit">Registrar-se</button>                    
                </form>
            </div>    
            <div class="form-container sign-in-container">
                <form action="/iniciarsessao/login" method="POST" id="formularioLogin">
                    <h1>Login</h1>
                    <div class="form-Login">
                        <input type="email" name="email" placeholder="E-mail" id="loginemail" />
                        <% if(message) { %>
                            <span style="color: white;" >
                                <%= message %>
                            </span>
                        <% } %>  
                    </div>
                    <div class="form-Login">
                        <input type="password" name="password" placeholder="Senha" id="loginsenha" />
                        <% if(message) { %>
                            <span style="color: white;" >
                                <%= message %>
                            </span>
                        <% } %> 
                    </div>                    
                    <a href="/login/recuperarsenha">Esqueceu sua senha?</a>
                    <button type="submit">Login</button>
                </form>
            </div>
            <div class="overlay-container">
                <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Ol√°, Amigo!</h1>
                    <p>Insira seus dados pessoais e comece a jornada conosco</p>
                    <button class="ghost" id="signIn">Registrar-se</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Bem-Vindo de Volta!</h1>
                    <button class="ghost" id="signUp">Login</button>                
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer') %> 